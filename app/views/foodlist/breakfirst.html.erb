<h1>Input BreakFirst</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@breakfirst, html: {class: "form-horizontal"}) do |f| %>

      <%= f.label :large_id %>
      <%= f.collection_select :large_id, LargeItem.all, :large_id, :large_val, 
          :prompt => "大分類を選択してください" %>

      <%=f.submit "Edit my profile" , class: "btn btn-large btn-primary" %>
    <% end %>
    
  </div>
</div>
