<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

      <%= f.label :old_id %>
      <%=f.text_field :old_id, class: 'form-control' %>

      <%= f.label :sex_id %>      
      <%=f.text_area :sex_id, class: 'form-control' %>

      <%= f.label :activity_level %>
      <%=f.text_field :activity_level, class: 'form-control' %>

      <%=f.submit "Edit my profile" , class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
