<div class="row">
  <aside class="col-md-12">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%= render 'profile' %>
  </aside>
  <div class="col-md-8">
    <% if @user.user_foods.any? %>
      <h3>Foods (<%= @user.user_foods.count %>)</h3>
      
      <ol class="user_foods">
        <%= render @user_foods %>
      </ol>
    <% end %>
  </div>
</div>