<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="user_food_form">
        <%= render 'shared/form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user_foods.any? %>
        <h2>今日食べた品目 (<%= @user_foods.count %>)</h2>
        <span><%= link_to "足りない品目を確認", result_path(current_user) %></span>
        
        <ol class="user_foods">
          <%= render @user_foods %>
        </ol>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Foodlists</h1>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
