<div class="cover">
  <div class="cover-inner">
    <div class="cover-contents">
      <h1>今日の栄養バランスを◯にする </h1>
      <% if logged_in? %>
      <% else %>
        <%= link_to 'はぴめしを始める' , login_path, class: "btn btn-success btn-lg" %>
      <% end %>
      </div>
  </div>
</div>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="user_food_form">
        <%= render 'shared/form' %>
      </section>
    </aside>
    <div class="col-md-6">
      <h2>今日食べた品目 (<%= @user_foods.count %>)</h2>
        <span><%= link_to "足りない品目を確認", result_path(current_user) %></span>
      <% if @user_foods.any? %>
        <ol class="user_foods">
          <%= render @user_foods %>
        </ol>
      <% end %>
    </div>
  </div>
<% else %>
<% end %>
